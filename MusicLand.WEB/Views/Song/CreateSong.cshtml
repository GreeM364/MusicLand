@model MusicLand.WEB.Models.VM.SongCreateViewModel

<form asp-action="CreateSong">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Song</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Song.Title" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Song.Duration" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Song.Duration" class="form-control" />
                <span asp-validation-for="Song.Duration" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Genre</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Song.GenreID" class="form-select" asp-items="@Model.GenreList">
                    <option disabled selected>--Select Genre--</option>
                </select>
                <span asp-validation-for="Song.GenreID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Artist</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Song.ArtistID" class="form-select" asp-items="@Model.ArtistList">
                    <option disabled selected>--Select Artist--</option>
                </select>
                <span asp-validation-for="Song.ArtistID" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-controller="Song" asp-action="IndexSong" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}