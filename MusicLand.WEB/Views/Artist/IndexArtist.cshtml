@model IEnumerable<MusicLand.WEB.Models.DTO.ArtistDTO>

<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Artist List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Artist" asp-action="CreateArtist" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Artist</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Country
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Country</td>
					<td>
						<a asp-controller="Artist" asp-action="UpdateArtist" asp-route-artistId="@item.ArtistId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Artist" asp-action="DeleteArtist" asp-route-artistId="@item.ArtistId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>