@model MusicLand.WEB.Models.DTO.ChangePasswordDTO


<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>ChangePassword</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="OldPassword" type="text" class="form-control" placeholder="OldPassword" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="NewPassword" type="text" class="form-control" placeholder="NewPassword" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}