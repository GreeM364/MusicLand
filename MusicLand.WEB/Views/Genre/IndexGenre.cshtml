@model IEnumerable<MusicLand.WEB.Models.DTO.GenreDTO>

<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Genre List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Genre" asp-action="CreateGenre" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Genre</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th width="15%">
					Name
				</th>
				<th width="65%">
					Description
				</th>
				<th width="20%">
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Description</td>
					<td>
						<a asp-controller="Genre" asp-action="UpdateGenre" asp-route-genreId="@item.GenreID" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Genre" asp-action="DeleteGenre" asp-route-artistId="@item.GenreID" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>